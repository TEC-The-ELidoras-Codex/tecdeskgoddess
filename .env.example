# TEC: BITLyfe Environment Configuration
# Copy this file to .env and fill in your actual values

# Azure AI Services
AZURE_AI_API_KEY=your_azure_ai_api_key_here
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_RESOURCE_GROUP=your_resource_group_name
AZURE_ACCOUNT_NAME=your_azure_account_name

# Web3 RPC URLs (replace with your actual endpoints)
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure

# Eleven Labs API (for voice synthesis)
ELEVEN_LABS_API_KEY=your_eleven_labs_api_key_here
ELEVEN_LABS_VOICE_ID=your_preferred_voice_id

# Ready Player Me Configuration
RPM_APP_ID=your_ready_player_me_app_id

# Development Settings
DEBUG=true
DEVELOPMENT_MODE=true

# Database Configuration (for future use)
DATABASE_URL=sqlite:///tec_database.db

# BITL Token Contract Addresses (update with real addresses when deployed)
BITL_CONTRACT_ETHEREUM=0xBITL000000000000000000000000000000000000
BITL_CONTRACT_POLYGON=0xBITL000000000000000000000000000000000000

# NFT Contract Addresses (update with real addresses)
METASTEED_CONTRACT_ETHEREUM=0x1234567890123456789012345678901234567890
METASTEED_CONTRACT_POLYGON=0x1234567890123456789012345678901234567890
GLITCHWITCH_CONTRACT_ETHEREUM=0x0987654321098765432109876543210987654321
GLITCHWITCH_CONTRACT_POLYGON=0x0987654321098765432109876543210987654321
